<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManteesActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Right and timely mentoring can help mentees realise their true potential.
\n We are keen to bring in Mentors and Mentees on a single platform to help them in their journey.
\n \n \n For more details, drop a note to : psn@prabisha.com"
        android:padding="10dp"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="@color/text_colour"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/mentees_pic"/>

</LinearLayout>