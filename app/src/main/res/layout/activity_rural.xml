<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prabishastartup.psn.app.startup.prabisha.RuralActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="We are keen to support and bring in Startups originating and functioning in Rural Areas. "
                android:padding="20dp"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/text_colour"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/rural_image_feed"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                android:id="@+id/rural_news_image"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Need to strengthen ecosystem to encourage more startups in rural areas: Thakur"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:background="@color/TextBackgroundColour"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/rural_news"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>